<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.hopestarter.wallet.ui.WalletFragment"
    android:background="@color/turquoise_dark">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/donations_label"
            android:textAllCaps="true"
            android:textSize="14sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#91A0A3"
            android:id="@+id/txtDonations"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00 mBTC"
            android:textSize="48sp"
            android:textColor="@color/white"
            android:id="@+id/mbtc_donations"
            android:layout_below="@id/txtDonations"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/mbtc_donations"
            android:text="$0.00"
            android:textAllCaps="true"
            android:textSize="24sp"
            android:fontFamily="sans-serif-medium"
            android:textColor="#91A0A3"
            android:id="@+id/currency_donations"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/white"
            android:layout_alignParentBottom="true">
            <FrameLayout
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:background="@color/turquoise" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$1026,43"
                    android:textStyle="bold"
                    android:id="@+id/world_donations"
                    android:textColor="@color/black"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/donated_so_far_worldwide"
                    android:textColor="@color/grey"

                    android:textSize="16sp"/>

            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
